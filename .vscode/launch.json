    "version": "0.2.0",
    "configurations": [
        {
            "name": "Watcher - Dev",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "watchDebug"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Release",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "release"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}
